{
  "src_folders": ["nightwatch"],
  "output_folder": "nightwatch/reports",
  "webdriver": {
    "start_process": true,
    "server_path": "node_modules/.bin/chromedriver",
    "port": 9515
  },
  "test_settings": {
    "default": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "nativeEvents": true,
        "chromeOptions": {
          "args": [
            "headless",
            "disable-gpu",
            "--no-sandbox",
            "start-fullscreen"
          ]
        }
      }
    },
    "launch_url": "https://eric.dictybase.dev/stockcenter",
    "chrome": {
      "desiredCapabilities": {
        "browserName": "chrome",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "nativeEvents": true,
        "chromeOptions": {
          "args": [
            "headless",
            "disable-gpu",
            "--no-sandbox",
            "start-fullscreen"
          ]
        }
      }
    },
    "firefox": {
      "desiredCapabilities": {
        "browserName": "firefox",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "nativeEvents": true
      }
    },
    "safari": {
      "desiredCapabilities": {
        "browserName": "safari",
        "javascriptEnabled": true,
        "acceptSslCerts": true,
        "nativeEvents": true
      }
    }
  }
}
